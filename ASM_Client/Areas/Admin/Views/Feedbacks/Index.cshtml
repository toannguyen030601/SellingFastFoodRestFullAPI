@model IEnumerable<ASM_api.Models.Feedback>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FeedbackID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FeedbackID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FeedbackID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
