@model ASM_api.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/poly.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/asm1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <title</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
    @if (TempData["Message"] != null)
    {
        <script>
            alert("@TempData["Message"]");
        </script>
    }

</head>
<body>

    <div class="d-flex justify-content-center align-items-center h-100" style="background: linear-gradient(210deg, #ffffff, #000000);">

        <div style="width: 500px; height: 500px;">

            <a class="ms-auto d-flex justify-content-center text-decoration-none" href="@Url.Action("Index", "HomeAdmin")">
                <img class="rounded-circle" src="~/images/products/logo.jpg" alt="" width="40px" height="40px">
                <h5 class="text-dark ms-2">H2 Restaurant</h5>
            </a>
            <h1 class="text-center">ForgotPassword</h1>
            @* <form name="myFormlogin" class="fw-bold "> *@
            @using (Html.BeginForm("ForgotPasswordAdmin", "AccessAdmin", FormMethod.Post))
            {
                <label>Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "required" })
                <div class="mt-2 d-flex justify-content-end">
                    <a asp-controller="AccessAdmin" asp-action="LoginAdmin" class="text-decoration-none" style="color: rgb(39, 38, 38); font-style: italic;">Đăng nhập?</a>
                </div>
                <div class="mt-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary bi bi-box-arrow-in-right" style="width: 300px;">
                        <span>Reset Password</span>
                    </button>
                </div>
            }
            @* </form> *@
        </div>
    </div>

</body>
</html>
