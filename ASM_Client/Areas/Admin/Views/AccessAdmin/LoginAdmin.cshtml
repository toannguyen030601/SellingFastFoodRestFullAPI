@model ASM_api.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/poly.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/asm1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <title>Login</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center h-100" style="background: linear-gradient(210deg, #ffffff, #000000);">
        <div style="width: 500px; height: 500px;">
            <div class="ms-3 text-center" href="~/">
                <img class="rounded-circle" src="~/images/products/logo.jpg" alt="" width="40px" height="40px">
                <span>H2 Restaurant</span>
            </div>
            <h1 class="text-center">Đăng nhập</h1>
            @* <form name="myFormlogin" class="fw-bold "> *@
            @using (Html.BeginForm("LoginAdmin", "AccessAdmin", FormMethod.Post))
            {
                <div class="mt-2">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", required = "required", autoforcus = "autofocus" })
                    @* <input name="email" id="email" class="form-control" type="email" required> *@
                </div>
                <div class="mt-2">
                    <label>Mật khẩu</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", required = "required", autoforcus = "autofocus" })
                    @* <input id="password" class="form-control" type="password"> *@
                </div>
                <div class="mt-2">
                    <input name="remember" id="remember" class="form-check-input" type="checkbox">
                    <label for="remember">Remember me</label>
                </div>
                <div class="mt-2 d-flex justify-content-end">
                    <a asp-controller="AccessAdmin" asp-action="ForgotPasswordAdmin" class="text-decoration-none" style="color: rgb(39, 38, 38); font-style: italic;">Quên mật khẩu?</a>
                </div>
                <div class="mt-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary bi bi-box-arrow-in-right" style="width: 300px;">
                        <span>Đăng nhập</span>
                    </button>
                </div>
            }

            @* </form> *@
        </div>
    </div>

</body>
</html>
