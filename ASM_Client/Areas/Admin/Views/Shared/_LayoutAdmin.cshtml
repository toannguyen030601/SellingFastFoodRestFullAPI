@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Dashboard - SB Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/Admin/js/scripts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Assets/Admin/assets/demo/chart-area-demo.js"></script>
    <script src="~/Assets/Admin/assets/demo/chart-bar-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="~/admin">
            <img class="rounded-circle" src="~/images/products/logo.jpg" alt="" width="40px" height="40px">
            <span>H2 Restaurant</span>
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        <!-- Navbar Search-->
        <div class="d-none d-md-inline-block ms-auto me-0 me-md-3 my-2 my-md-0 text-light">
            Xin Chào, @Context.Session.GetString("TenEmployee")
        </div>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Cài đặt</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="AccessAdmin" asp-action="LogoutAdmin">Đăng xuất</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">Core</div>
                        <a class="nav-link" href="~/admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                            Dashboard
                        </a>
                        <div class="sb-sidenav-menu-heading">Quản lí sản phẩm</div>
                        <a class="nav-link collapsed" href="" data-bs-toggle="collapse" data-bs-target="#collapsedt" aria-expanded="false" aria-controls="collapsedt">
                            <div class="sb-nav-link-icon"><i class="bi bi-phone"></i></div>
                            Sản phẩm
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapsedt" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
                                <a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a>
                            </nav>
                        </div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Suppliers" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-gear"></i></div>
                            Nhà cung cấp
                        </a>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOrder" aria-expanded="false" aria-controls="collapseOrder">
                            <div class="sb-nav-link-icon"><i class="bi bi-basket"></i></i></div>
                            Quản lí đơn hàng
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapseOrder" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">Orders</a>
                            </nav>
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="OrderDetails" asp-action="Index">OrderDetails</a>
                            </nav>
                            <nav class="sb-sidenav-menu-nested nav">
                                <a class="nav-link" asp-area="Admin" asp-controller="Feedbacks" asp-action="Index">Feedbacks</a>
                            </nav>
                        </div>
                        <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapsePages" aria-expanded="false" aria-controls="collapsePages">
                            <div class="sb-nav-link-icon"><i class="fas fa-book-open"></i></div>
                            Pages
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>
                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth">
                                    <div class="sb-nav-link-icon"><i class="bi bi-gear"></i></div>
                                    Settings
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="pagesCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordionPages">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        @* <a class="nav-link" asp-area="Admin" asp-controller="AccessAdmin" asp-action="LoginAdmin">Đăng nhập</a>
                                        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#signupModal">Đăng kí</a>
                                        <a class="nav-link" data-bs-toggle="modal" data-bs-target="#qmkModal">Quên mật khẩu</a> *@
                                    </nav>
                                </div>
                            </nav>
                        </div>
                        <div class="sb-sidenav-menu-heading">Tài khoản</div>
                        <a class="nav-link" asp-area="Admin" asp-controller="Employees" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-gear"></i></div>
                            Employees
                        </a>
                        <a class="nav-link" asp-area="Admin" asp-controller="Customers" asp-action="Index">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-badge-fill"></i></div>
                            Customers
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Logged in as: @Context.Session.GetString("TenEmployee")</div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <div class="container-fluid">
                @RenderBody()
            </div>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Your Website 2023</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <div>
        <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title bi bi-person-fill-add" id="signupModalLabel"> Đăng ký</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="background: linear-gradient(210deg, #ffffff, #000000); padding: 30px;">
                        <form name="myFormSignup" ng-controller="myFormSignup" class="fw-bold">
                            <div class="mt-2">
                                <label for="">Email</label>
                                <input name="email" class="form-control" type="email" required>
                            </div>
                            <div class="mt-2">
                                <label for="">Mật khẩu</label>
                                <input name="matkhau" class="form-control" type="password" required>
                            </div>
                            <div class="mt-2">
                                <label for="">Nhập lại mật khẩu</label>
                                <input name="nhaplaimatkhau" class="form-control" type="password" ng-model="nhaplaimatkhau" required>
                            </div>
                            <div class="mt-3 d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary bi bi-person-fill-add" ng-click="reg()" style="width: 300px;">
                                    <span>Đăng ký</span>
                                </button>
                            </div>
                            <div class="mt-2">
                                <div class="text-center">
                                    <p>Hoặc đăng ký bằng</p>
                                </div>
                                <div class="row">
                                    <div class="mb-2 col-sm-4 d-flex justify-content-center">
                                        <a href="#" class="btn btn-primary w-100">
                                            <i class="bi bi-facebook"></i>
                                            <span class="fw-bold">Facebook</span>
                                        </a>
                                    </div>
                                    <div class="mb-2 col-sm-4 d-flex justify-content-center">
                                        <a href="#" class="btn btn-danger w-100">
                                            <i class="bi bi-google"></i>
                                            <span class="fw-bold">Google</span>
                                        </a>
                                    </div>
                                    <div class="mb-2 col-sm-4 d-flex justify-content-center">
                                        <a href="#" class="btn btn-light w-100">
                                            <i class="bi bi-github"></i>
                                            <span class="fw-bold" 4>Github</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2 d-flex justify-content-center">
                                <h6 style="color: rgb(122, 121, 121); font-size: 12px;">
                                    Bạn đã có tài khoản?
                                    <a data-bs-toggle="modal" data-bs-target="#loginModal" class="text-decoration-none" style="color: rgb(0, 0, 0);" href="#">Đăng nhập</a>
                                </h6>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="qmkModal" tabindex="-1" aria-labelledby="qmkModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title bi bi-exclamation-circle" id="qmkModalLabel"> Quên mật khẩu</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="background: linear-gradient(210deg, #ffffff, #000000); padding: 30px;">
                        <form name="myFormQmk" class="fw-bold">
                            <div class="mt-2">
                                <label for="">Email</label>
                                <input name="email" class="form-control" type="email" required>
                            </div>
                            <div class="mt-3 d-flex justify-content-center">
                                <button type="button" class="btn btn-primary bi bi-box-arrow-in-right" style="width: 300px;">
                                    <span>Khôi phục</span>
                                </button>
                            </div>
                            <div class="mt-2 d-flex justify-content-center">
                                <h6 style="color: rgb(122, 121, 121); font-size: 12px;">
                                    Bạn đã có tài khoản?
                                    <a data-bs-toggle="modal" data-bs-target="#loginModal" class="text-decoration-none" style="color: rgb(0, 0, 0);" href="#">Đăng nhập</a>
                                </h6>
                            </div>
                            <div class="mt-2 d-flex justify-content-center">
                                <h6 style="color: rgb(122, 121, 121); font-size: 12px;">
                                    Bạn chưa có tài khoản?
                                    <a data-bs-toggle="modal" data-bs-target="#signupModal" class="text-decoration-none" style="color: rgb(0, 0, 0);" href="#">Đăng ký</a>
                                </h6>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
